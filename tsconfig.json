{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist"
	},
	"include": [
		"hardhat.config.ts",
		"./scripts",
		"./deploy",
		"./test",
		"./src",
		"typechain/**/*"
	]
}
